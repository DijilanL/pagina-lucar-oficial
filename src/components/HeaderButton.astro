---
interface Props {
  href: string
  class?: string
  [key: string]: any // para pasar target, rel, aria-*, etc.
}

const { href, class: extraClass, ...rest } = Astro.props as Props

const base =
  "inline-flex items-center gap-2 bg-gradient-to-r from-blue-500 to-purple-600 \
   text-white font-bold py-4 px-8 rounded-lg shadow-lg transition-all duration-300 \
   hover:scale-110 hover:shadow-xl hover:from-purple-500 hover:to-pink-600 active:scale-95"
---
<a href={href} class={`${base} ${extraClass ?? ""}`} {...rest}>
  <slot name="before" />
  <span class="leading-tight"><slot /></span>
  <span class="shrink-0"><slot name="after" /></span>
</a>