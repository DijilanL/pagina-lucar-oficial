---
import HeaderButton from "./HeaderButton.astro";
const current = Astro.url.pathname;
---
<header class="pt-8 md:pt-12">
  <div class="max-w-6xl mx-auto px-4 md:px-6 lg:px-8">
    <div class="text-center mb-8 md:mb-10">
      <h1 class="text-4xl md:text-6xl font-extrabold tracking-tight">
        <span class="bg-gradient-to-r from-blue-400 via-indigo-400 to-fuchsia-400 bg-clip-text text-transparent">
          Mi blog personal
        </span>
        <span class="ml-2 align-middle">🐱‍🚀</span>
      </h1>
      <p class="mt-3 text-slate-400 text-base md:text-lg">Toda la información que puedo guardar</p>
    </div>
  </div>

  <div class="sticky top-0 z-40 border-b border-white/10 bg-slate-950/60 backdrop-blur-xl">
    <nav class="max-w-6xl mx-auto px-4 md:px-6 lg:px-8 py-3 flex flex-wrap items-center justify-center gap-3 md:gap-4">
      <HeaderButton href="/latest" aria-current={(current === "/latest" || current === "/") ? "page" : undefined}>Últimos archivos</HeaderButton>
      <HeaderButton href="/oldest" aria-current={current === "/oldest" ? "page" : undefined}>Archivos antiguos</HeaderButton>
      <HeaderButton href="/add"    aria-current={current === "/add"    ? "page" : undefined}>Añadir archivos</HeaderButton>
      <HeaderButton href="/about"  variant="ghost" aria-current={current === "/about"  ? "page" : undefined}
        class="tooltip" data-tip="Información del sitio">
        Sobre la página
        <svg slot="after" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 9h.01"/><path d="M11 12h1v4h1"/><path d="M21 12a9 9 0 1 1 -18 0a9 9 0 0 1 18 0"/></svg>
      </HeaderButton>

      <!-- Botón menú comando -->
      <button type="button" class="btn btn-ghost btn-sm tooltip" data-tip="Abrir menú (⌘/Ctrl + K)" onclick="document.getElementById('cmdk')?.showModal()">
        <svg width="16" height="16" viewBox="0 0 24 24"><path fill="currentColor" d="M17 3H7a4 4 0 0 0-4 4v10a4 4 0 0 0 4 4h10a4 4 0 0 0 4-4V7a4 4 0 0 0-4-4M9 7h6a2 2 0 1 1 0 4H9a2 2 0 1 1 0-4m6 10H9v-2h6z"/></svg>
        <span class="hidden sm:inline-flex">Menú</span>
        <span class="hidden md:inline-flex kbd">⌘K</span>
      </button>
    </nav>
  </div>
</header>